<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="nav p-5">
            <a href="/" class="text-blue-300">Back To Home</a>
        </div>
        <div class="form p-10 text-white">
            <h1 class="text-3xl tracking-tighter mb-5">All Users</h1>
            <div class="users flex gap-3 flex-wrap">
                <% if (users.length > 0) { %>
                    <% users.forEach(function(user) { %>
                        <div class="task w-80 px-3 py-4 rounded-md bg-zinc-800 flex flex-col justify-between">
                            <div>
                                <h1 class="text-white text-xl tracking-tighter"> <%= user.username %></h1>
                                <h3 class="text-white text-md tracking-tighter"> <%= user.email %></h3>
                                <h3 class="text-white tracking-tighter">Age: <%= user.age %></h3>
                            </div>
                            <div class="w-full flex justify-end">
                                <a class="text-zinc-400 hover:text-zinc-200 inline-block mt-3" href="/delete/<%= user.id %>">Delete</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <h3 class="text-zinc-500">No Users Found</h3>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>
